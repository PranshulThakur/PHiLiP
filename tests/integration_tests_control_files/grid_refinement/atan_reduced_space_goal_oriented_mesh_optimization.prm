# Listing of Parameters
# ---------------------
# Number of dimensions
set dimension = 1

# The PDE we want to solve. Choices are
# <advection|diffusion|convection_diffusion>.
set pde_type  = advection
set test_type = goal_oriented_mesh_optimization 

set sipg_penalty_factor = 20.0
set overintegration = 5
#set use_collocated_nodes = true

subsection linear solver
#set linear_solver_type = direct
  subsection gmres options
    set linear_residual_tolerance = 1e-13
    set max_iterations = 2000
    set restart_number = 50
    #set ilut_fill = 1
    #set ilut_atol = 1.0e-5
  end 
end

subsection ODE solver
  #output solution
  #set output_solution_every_x_steps = 1

  # Maximum nonlinear solver iterations
  set nonlinear_max_iterations            = 500

  # Nonlinear solver residual tolerance
  set nonlinear_steady_residual_tolerance = 1e-12

  # Print every print_iteration_modulo iterations of the nonlinear solver
  set print_iteration_modulo              = 1

  # Explicit or implicit solverChoices are <explicit|implicit>.
  set ode_solver_type                     = implicit
end

subsection optimization
    set optimization_type = reduced_space
    set use_coarse_residual = false
    set use_fine_solution = false

    set gradient_tolerance = 1.0e-11
    set max_design_cycles = 30
    set linear_iteration_limit = 2000
    set initial_step_size = 1.0
    set functional_evaluation_limit = 30
    set line_search_method = Backtracking
    set line_search_curvature = Strong Wolfe Conditions
    set reduced_space_descent_method = Quasi-Newton Method #Newton-Krylov
    
	set mesh_weight_factor = 0.0  #5e-2 5e-2 5e-2
    set mesh_volume_power = 2
end

subsection functional
  # functional choice
  set functional_type = normLp_volume

   # exponent
   set normLp = 2.0
end

subsection manufactured solution convergence study
  set use_manufactured_source_term = true
  set manufactured_solution_type   = atan_solution
end

subsection flow_solver
  set flow_case_type = atan_shock
  set steady_state = true
  set steady_state_polynomial_ramping = false
  set poly_degree = 2 #2 1 1
  set max_poly_degree_for_adaptation = 3  #3 2 2
  subsection grid
    set number_of_mesh_refinements = 6  #6 7 8
    set grid_left_bound = 0
    set grid_right_bound = 1
  end
end
